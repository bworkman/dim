<p id="notice"><%= notice %></p>

<h1>Loadouts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Item1</th>
      <th>Item2</th>
      <th>Item3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loadouts.each do |loadout| %>
      <tr>
        <td><%= loadout.name %></td>
        <td><%= loadout.item1 %></td>
        <td><%= loadout.item2 %></td>
        <td><%= loadout.item3 %></td>
        <td><%= link_to 'Show', loadout %></td>
        <td><%= link_to 'Edit', edit_loadout_path(loadout) %></td>
        <td><%= link_to 'Destroy', loadout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loadout', new_loadout_path %>
